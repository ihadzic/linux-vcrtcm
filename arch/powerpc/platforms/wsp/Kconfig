config PPC_WSP
	bool
	select PPC_A2
	select PPC_SCOM
	select PPC_XICS
	select PPC_ICP_NATIVE
	select PCI
	select PPC_IO_WORKAROUNDS if PCI
	select PPC_INDIRECT_PIO if PCI
	default n

menu "WSP platform selection"
	depends on PPC_BOOK3E_64

config PPC_PSR2
	bool "PSR-2 platform"
	select GENERIC_TBSYNC
	select EPAPR_BOOT
	select PPC_WSP
	default y

endmenu

config PPC_A2_DD2
	bool "Support for DD2 based A2/WSP systems"
	depends on PPC_A2
